{{!-- <div class="scrollable-events col-sm-8 d-none d-lg-block"> --}}
    {{#each events as |event|}}
        {{#if (eq event.eventName displayEvent)}}
            <img src="/images/events/{{lowercase event.eventName}}.jpg" style="width: 100%;margin-bottom: 3%;">
            <h2 style="text-align: right">{{event.eventName}}</h2>
            {{{desc-helper event.eventDescription}}}
            {{#if (exists event.eventRegLink)}}
            <a href={{event.eventRegLink}} target="_blank" style="text-decoration: none">
                <button class="register">
                    Register
                </button>
                </a>
            {{/if}}
        {{/if}}
    {{/each}}
{{!-- </div>  --}}